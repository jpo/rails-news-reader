<% content_for :title, 'Reset Password' %>

<div class="hero-unit hero-unit-header">
  <div class="container">
    <h1>Forgot Your Password?</h1>
    <p>No problem. Just enter your email address below.</p>
  </div>
</div>

<div class="container">
<div class="row">
<div class="span8 offset2">
  <div class="well well-white well-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: 'post', class: 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>
      <div class="control-group">
        <%= f.label :email, class: 'control-label' %>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.submit "Send reset instructions", class: 'btn' %>
        </div>
      </div>
      <p class="text-center">
        <%= render "devise/shared/links" %>
      </p>
    <% end %>
  </div>
</div>
</div>
</div>
